{
  "expo": {
    "name": "petdrop_project",
    "slug": "petdrop_project",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "https://docs.expo.dev/static/images/tutorial/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#fffcf1"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "This app uses the photo gallery for selecting images.",
        "NSUserNotificationUsageDescription": "This app uses notifications to remind you when to administer medications.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "io.expo.client.PetDrop"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.NOTIFICATIONS",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app requires access to your photos for you to select an image."
        }
      ],
      "expo-video",
      "expo-notifications"
    ],
    "extra": {
      "eas": {
        "projectId": "7f54ba26-10cb-44f0-8509-427001c10f1d"
      }
    }
  }
}
